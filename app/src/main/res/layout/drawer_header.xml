<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="172dp">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/header_background"
        android:scaleType="centerCrop"/>

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="172dp"
    android:orientation="vertical"
    android:paddingTop="@dimen/spacing_large_24"
    android:paddingLeft="@dimen/spacing_normal_16"
    android:paddingRight="@dimen/spacing_normal_16"
    android:paddingBottom="@dimen/spacing_small_8">

    <ImageView
        android:id="@+id/iv_drawer_avatar"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@android:drawable/sym_def_app_icon"
        android:layout_marginTop="@dimen/spacing_normal_16"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Дмитрий Чеботарь"
            android:textSize="14sp"
            android:textColor="@color/color_black"
            android:fontFamily="sans-serif-medium"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Optimussflash@ukr.net"
            android:textSize="14sp"
            android:textColor="@color/color_black"
            android:fontFamily="sans-serif"/>

    </LinearLayout>

</RelativeLayout>

</FrameLayout>